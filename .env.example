# REH_FOR_CV-2 OSINT Rehber - Environment Variables
# Copy this file to .env and update values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://kullanici:sifre@db/rehber

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-secure-random-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# =============================================================================
# FLASK
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=1

# =============================================================================
# PHASE 3: DATA ENRICHMENT
# =============================================================================
# Gravatar timeout (seconds)
GRAVATAR_TIMEOUT=5

# Social media lookup timeout (seconds)
SOCIAL_LOOKUP_TIMEOUT=5

# =============================================================================
# PHASE 4: LOCATION INTELLIGENCE
# =============================================================================
# Default cluster radius (km)
DEFAULT_CLUSTER_RADIUS=10

# Default proximity search radius (km)
DEFAULT_PROXIMITY_RADIUS=5

# =============================================================================
# PHASE 6: EXTERNAL API KEYS (Optional)
# =============================================================================
#  HaveIBeenPwned API Key
HAVEIBEENPWNED_API_KEY=

# Hunter.io API Key
HUNTER_API_KEY=

# Shodan API Key
SHODAN_API_KEY=

# VirusTotal API Key
VIRUSTOTAL_API_KEY=

# =============================================================================
# PHASE 8: SECURITY & OPSEC
# =============================================================================
# Proxy settings (optional)
# HTTP_PROXY=
# HTTPS_PROXY=

# Rate limiting
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_STORAGE_URL=memory://
